<?xml version="1.0" encoding="utf-8"?>
<nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/themedButtonGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        app:toggle_text="5:30PM"/>

    <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
        android:id="@+id/btn2"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        app:toggle_borderColor="@color/lavender"
        app:toggle_borderWidth="5dp"
        android:text="6:00PM"/>

    <nl.bryanderidder.themedtogglebuttongroup.ThemedButton
        android:id="@+id/btn3"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        app:toggle_borderColor="@color/lavender"
        app:toggle_selectedBorderColor="@color/sapphire"
        app:toggle_borderWidth="5dp"
        app:toggle_selectedBorderWidth="20dp"
        android:text="6:30PM"/>

</nl.bryanderidder.themedtogglebuttongroup.ThemedToggleButtonGroup>